		<script language="javascript">
		$(document).ready( function() {
		      FB.init({appId: "363753320314028", status: true, cookie: true});

		    $('a#icare_button_link').click( function() {

			$.get($('a#icare_button_link').attr('href'), function(data) {
			
			}).error(function() { 
			      $(location).attr('http://172.30.11.22:3003/'); 
			});
			    $( "#dialog:ui-dialog" ).dialog( "destroy" );
		    
			    $( "#dialog-confirm" ).dialog({
				    resizable: false,
				    height:140,
				    modal: true,
				    buttons: {
					    "Post to Facebook": function() {
						    $( this ).dialog( "close" );
						    postToFeed();
					    },
					    "I will, but not right now": function() {
						    $( this ).dialog( "close" );
					    }
				    }
			    });    
			
			return false;
		      
		    });
		});
		function postToFeed() {

		    // calling the API ...
		    var obj = {
			/*
		      method: 'feed',
		      link: window.location.toString(),
		      picture: 'http://172.30.11.22:3003/assets/ICARE_button_FINAL_03.png',
		      name: 'I Care about <%= site.description %>',
		      caption: 'Please support my cause!',
		      description: 'I Care about <%= site.description %>'
		      */
	  method: 'feed',
          link: 'https://developers.facebook.com/docs/reference/dialogs/',
          picture: 'http://fbrell.com/f8.jpg',
          name: 'Facebook Dialogs',
          caption: 'Reference Documentation',
          description: 'Using Dialogs to interact with users.'

		    };

		    function callback(response) {
		      alert("Post ID: " + response['post_id']);
		    }

		    FB.ui(obj, callback);
		}
